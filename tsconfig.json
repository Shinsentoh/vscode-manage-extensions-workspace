{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"lib": [
			"es6",
			"es2019"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,   /* enable all strict type-checking options */
		"skipLibCheck": true,
		/* for typeDI and reflect-metadata */
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"moduleResolution": "node"
	},
	"exclude": [
		"test",
		"node_modules",
		".vscode-test",
		"jest.config.ts",
		"out"
	]
}